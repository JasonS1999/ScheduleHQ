rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload/read profile images
    // Matches any file under the employee's directory (e.g. profile.jpg)
    match /managers/{managerUid}/employees/{employeeId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow Cloud Functions (admin SDK) to process CSV imports
    // Admin SDK bypasses rules, but explicit match for clarity
    match /shift_manager_imports/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}
